(%o2) /home/gunter/src/maxima-code/share/contrib/augmented_lagra\
ngian.mac
@end group
@group
(%i3) FOM: x^2 + 2*y^2;
                               2    2
(%o3)                       2 y  + x
@end group
@group
(%i4) xx: [x, y];
(%o4)                        [x, y]
@end group
@group
